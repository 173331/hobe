-- CHAOS SCANNER - DOT SYNTAX VERSION
local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

local Scanner = {}
Scanner.Results = {RemoteEvents = {}}
Scanner.Stats = {TotalScanned = 0, HighRisk = 0, MediumRisk = 0, LowRisk = 0}

function Scanner.ScanRemoteEvents()
    local remotes = {}
    for _, obj in pairs(game.ReplicatedStorage:GetDescendants()) do
        if obj:IsA("RemoteEvent") then
            table.insert(remotes, {Object = obj, Name = obj.Name})
            Scanner.Stats.TotalScanned = Scanner.Stats.TotalScanned + 1
        end
    end
    Scanner.Results.RemoteEvents = remotes
    return remotes
end

print("Chaos Scanner Loaded!")
print("Found " .. #Scanner.ScanRemoteEvents() .. " remotes")
